#!/bin/bash

usage() {
	echo "usage: workon [env_name]"
}

error() {
	echo "Error: $@"
	exit 1
}

if [[ $1 = '' ]]; then
	usage
	exit 1
fi

if [[ -d $1 ]]; then
	if [[ -f $1/bin/activate ]]; then
		source $1/bin/activate
	else
		error "Couldn't find $1/bin/activate"
	fi
else
	error "No such directory named $1"
fi
